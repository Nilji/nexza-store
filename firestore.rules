rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Only the authenticated user can read or write their own data
      allow read, write: if request.auth.uid == userId;
      
      // The admin can read any user's data
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == 'rijanjoshi66@gmail.com';
       allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == 'rijanjoshi66@gmail.com';
    }
  }
}